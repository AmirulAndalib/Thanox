<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeMD3" parent="Theme.Material3Expressive.DayNight">
        <item name="colorPrimary">?colorSurface</item>
        <item name="colorPrimaryDark">?colorSurface</item>
        <item name="appbarPopupTheme">@style/PopupOverlayLight</item>
        <item name="appbarTheme">@style/AppBarOverlayLight</item>
        <item name="toolbarTheme">@style/ToolbarThemeCommon</item>
        <item name="collapsingToolbarTheme">@style/CollapsingToolbarThemeCommon</item>
        <item name="alertDialogTheme">@style/DialogThemeCommon</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="switchPreferenceCompatStyle">@style/SwitchPrefTheme</item>
        <item name="preferenceFragmentCompatStyle">@style/PrefFragmentCompatThemeCommon</item>

        <item name="appCardBackground">@color/md_white</item>
        <item name="progressTrackColor">@color/md_grey_300</item>
        <item name="switchBarBackground">?colorPrimaryContainer</item>

    </style>

    <style name="ThemeMD3.App">
        <item name="appCardBackground">@color/md_white</item>
        <item name="android:windowBackground">@color/md_grey_100</item>
        <item name="android:statusBarColor">@color/md_grey_100</item>
    </style>

    <style name="ThemeMD3.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>