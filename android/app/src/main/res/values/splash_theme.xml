<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_blue_a700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/ThemeMD3.App.NoActionBar</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/md_blue_a700</item>
        <item name="android:navigationBarColor">@color/md_blue_a700</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>